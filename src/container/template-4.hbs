{{!-- header --}}

<header class="header">
    <dic>
        {{> logo}}
    </dic>
    <nav class="header_nav">
        <div class="header_nav_right">{{> nav list=header}}</div>
    </nav>
</header>

{{!-- header end --}}

{{#with main}}
<div class="main">
    <img src="{{image}}" alt="Main photo" class="main_image">
    <div class="main_content">

        <h1 class="main_heading">{{heading}}</h1>
        <p class="main_descriotion">{{descriotion}}</p>

        <div><a href="{{href}}" class="main_button button">{{button}}</a></div>
    </div>
</div>
{{/with}}

<main class="featured">
    {{#each featured}}
    <div class="card">
        <div class="card_photo" style="background-image: url({{photo}});"></div>
        <h2 class="card_heading">{{heading}}</h2>
        <p class="card_info">{{info}}</p>
        <a href="{{linkUrl}}" class="card_link button">{{linkText}}</a>
    </div>
    {{/each}}
</main>


<div class="actions">
    {{#each actions}}
    <div class="action_content">
        <h3 class="action_title">{{heading}}</h3>
        <div class="action">
            <a href="{{url}}" class="button action_button">{{text}}</a>
        </div>
    </div>
    {{/each}}
</div>


{{!-- footer --}}

<footer class="footer">

    <div>
        {{>logo}}
        <span class="footer_copyright">Â© 2023</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}

</footer>

{{!-- footer end --}}