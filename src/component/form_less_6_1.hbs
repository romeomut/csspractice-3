{{#each data}}
  <div class='card col-12 mb-4'>

    <div class='row'>

      <div class='col-2'>
        <img src='{{image}}' alt='{{name}}' class='p-2' />
      </div>

      <div class='col-4'>
        <div class='h4 mt-2'>{{name}}</div>
        <div>{{description}}</div>
      </div>

      <div class='col-2'>
        <div class='mt-4'>{{price.title}}:</div>
        <div class='h5 mt-1'>{{price.value}}</div>
      </div>

      <div class='col-2'>
        <div class='pt-5'>{{amount}}</div>
      </div>

      <div class='col-2'>
        {{#each buttons}}
          <button class='btn mt-3 {{#if isPrimary}}btn-primary{{/if}} {{#if isDanger}}btn-outline-danger{{/if}}'>{{text}}</button>
        {{/each}}
      </div>

    </div>
  </div>
{{/each}}